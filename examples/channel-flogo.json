{
  "name": "stream",
  "type": "flogo:app",
  "version": "0.0.1",
  "appModel": "1.0.0",
  "channels": [
    "test:5"
  ],
  "triggers": [
    {
      "id": "receive_http_message",
      "ref": "github.com/project-flogo/contrib/trigger/rest",
      "name": "Receive HTTP Message",
      "settings": {
        "port": "7777"
      },
      "handlers": [
        {
          "settings": {
            "method": "GET",
            "path": "/test/:val"
          },
          "action": {
            "id": "simple_filter",
            "input" : {
              "input":"=$.pathParams.val"
            }
          }
        }
      ]
    },
    {
      "id": "internal_channel",
      "ref": "github.com/project-flogo/contrib/trigger/channel",
      "handlers": [
        {
          "settings": {
            "channel": "test"
          },
          "action": {
            "id": "simple_report",
            "input": {
              "rinput" : "=$.data.out"
            }
          }
        }
      ]
    }
  ],
  "actions": [
    {
      "id": "simple_filter",
      "ref": "github.com/project-flogo/stream",
      "settings": {
        "pipelineURI": "res://pipeline:simple_filter",
        "outputChannel": "test"
      }
    },
    {
      "id": "simple_report",
      "ref": "github.com/project-flogo/stream",
      "settings": {
        "pipelineURI": "res://pipeline:simple_report"
      }
    }
  ],
  "resources": [
    {
      "id": "pipeline:simple_filter",
      "data": {
        "metadata": {
          "input": [
            {
              "name": "input",
              "type": "int"
            }
          ],
          "output": [
            {
              "name": "out",
              "type": "int"
            }
          ]
        },
        "stages": [
          {
            "ref": "github.com/project-flogo/stream/activity/filter",
            "settings": {
              "type": "non-zero"
            },
            "input": {
              "value": "=$pipeline.input"
            },
            "output": {
              "pipeline.out": "=$.value"
            }
          },
          {
            "ref": "github.com/project-flogo/contrib/activity/log",
            "input": {
              "message": "=$.value"
            }
          }
        ]
      }
    },
    {
      "id": "pipeline:simple_report",
      "data": {
        "metadata": {
          "input": [
            {
              "name": "rinput",
              "type": "int"
            }
          ]
        },
        "stages": [
          {
            "ref": "github.com/project-flogo/contrib/activity/log",
            "input": {
              "message": "=string.concat('fromChannel: ', $pipeline.rinput)"
            }
          }
        ]
      }
    }
  ]
}