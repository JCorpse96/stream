{
  "name": "stream",
  "type": "flogo:app",
  "version": "0.0.1",
  "appModel": "1.0.0",
  "triggers": [
    {
      "id": "receive_http_message",
      "ref": "github.com/project-flogo/contrib/trigger/rest",
      "name": "Receive HTTP Message",
      "settings": {
        "port": "7777"
      },
      "handlers": [
        {
          "settings": {
            "method": "GET",
            "path": "/test/:val"
          },
          "action": {
            "id": "simple_agg",
            "input": {
              "input" : "=$.pathParams.val"
            }
          }
        }
      ]
    }
  ],
  "actions": [
    {
      "id": "simple_agg",
      "ref": "github.com/project-flogo/stream",
      "settings": {
        "pipelineURI": "res://pipeline:simple_filter"
      }
    }
  ],
  "resources": [
    {
      "id": "pipeline:simple_filter",
      "data": {
        "metadata": {
          "input": [
            {
              "name": "input",
              "type": "integer"
            }
          ]
        },
        "stages": [
          {
            "ref": "github.com/project-flogo/stream/activity/filter",
            "settings": {
              "type": "non-zero",
              "proceedOnlyOnEmit": true
            },
            "input": {
              "value": "=$.input"
            }
          },
          {
            "ref": "github.com/project-flogo/contrib/activity/log",
            "input": {
              "message": "=$.value"
            }
          }
        ]
      }
    }
  ]
}
