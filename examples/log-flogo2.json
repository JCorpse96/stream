{
  "name": "stream",
  "type": "flogo:app",
  "version": "0.0.1",
  "appModel": "1.0.0",
  "triggers": [
    {
      "id": "receive_http_message",
      "ref": "github.com/TIBCOSoftware/flogo-contrib/trigger/rest",
      "name": "Receive HTTP Message",
      "description": "Simple REST Trigger",
      "settings": {
        "port": "7777"
      },
      "handlers": [
        {
          "action": {
            "id": "simple",
            "mappings": {
              "input": [
                {
                  "mapTo": "input", "type": "assign", "value": "$.pathParams.val"
                }
              ]
            }
          },
          "settings": {
            "method": "GET",
            "path": "/test/:val"
          }
        }
      ]
    }
  ],

  "actions": [
    {
      "id": "simple",
      "ref": "github.com/flogo-oss/stream/action",
      "data": {
        "pipelineURI": "res://pipeline:simple"
      }
    }
  ],

  "resources": [
    {
      "id": "pipeline:simple",
      "data": {
        "metadata": {
          "input": [
            {
              "name": "input",
              "type": "string"
            }
          ]
        },
        "stages": [
          {
            "ref": "github.com/TIBCOSoftware/flogo-contrib/activity/log",
            "inputMappings": [
              {
                "mapTo": "message", "type": "assign", "value": "$.input"
              }
            ]
          },
          {
            "ref": "github.com/TIBCOSoftware/flogo-contrib/activity/log",
            "input": {
              "message": "activity2",
              "flowInfo": "false",
              "addToFlow": "false"
            }
          }
        ]
      }
    }
  ]
}